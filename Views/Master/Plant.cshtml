@*Diaplay data*@
<table id="table_id" class="page-table">
    <thead style="background-color:gainsboro ;color:black ; ">
        <tr>

            <th class="page-table-head">
                Plant ID
            </th>
            <th class="page-table-head">
                Plant Name
            </th>
            <th class="page-table-head">
                Status
            </th>
            <th class="page-table-head" colspan="2">
                Action

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*  @Html.HiddenFor(modelItem => item.PlantID)*@

                <td id="PlantId" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.PlantID)
                </td>
                <td id="PlantName" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.PlantName)
                </td>


                <td id="Status" class="page-table-data" style="border:solid 1px grey">

                    @if (item.Status == 1)
                    {
                        <span id="open">Active</span>

                    }
                    @if (item.Status == 0)
                    {
                        <span id="closed">Inactive</span>

                    }

                </td>

                <td class="page-table-data" style="border:solid 1px grey">

                    <a href="#" data-bs-toggle="modal" data-bs-target="#EditModal" id="btnEdit" data-id="@item.PlantID" onclick="EditFn(@item.PlantID)">Edit</a>


                </td>
                <td class="page-table-data" style="border:solid 1px grey">
                    <a href="#" id="Inactive" onclick="InactiveFn(@item.PlantID)">Inactive</a>
                </td>

            </tr>
        }
    </tbody>

</table>


@*Modal Create*@
<div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" controller="Master" action="CreatePlant">
                <div class="modal-header" style="background-color:blue">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Plant Create</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Plant ID:</label>
                        @{
                            int value = @Model.Count + 1;

                            <input type="text" class="form-control" style="background-color:gainsboro" name="PlantID" id="PlantID" readonly value="@value">
                        }
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Plant Name:</label>
                        <input type="text" class="form-control" name="PlantName" id="PlantName">

                    </div>
                    <div class="mb-3">


                        <input class="form-check" type="checkbox" name="Status" id="Status">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>




@*Modal Edit*@
<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post" action="PlantUpdate" controller="Master">
            <div class="modal-content">
                <div class="modal-header" style="background-color:blue">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Plant Edit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Plant ID:</label>
                        <input type="text" class="form-control" style="background-color:gainsboro" name="PlantID" id="ModalPlantID" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Plant Name:</label>
                        <input type="text" class="form-control" name="PlantName" id="ModalPlantName">
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>
                        <input class="form-check-input" name="Status" id="ModalStatus">

                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="Submit" class="btn btn-primary" id="save">Submit</button>
                </div>

            </div>
        </form>
    </div>
</div>



