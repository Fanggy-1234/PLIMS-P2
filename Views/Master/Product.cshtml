@*Diaplay data*@
<table id="table_id" class="page-table">
    <thead>
        <tr>

            <th class="page-table-head">
                Product ID
            </th>
            <th class="page-table-head">
                Product Name
            </th>
            <th class="page-table-head">
                Status
            </th>
            <th class="page-table-head" colspan="2">
                Action
 
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.ProductID)

                <td id="ProductId"  class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td id="ProductName" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>

                <td class="page-table-data" style="border:solid 1px grey">

                    @if (item.Status == 1)
                    {
                        <span id="open">Active</span>

                    }
                    @if (item.Status == 0)
                    {
                        <span id="closed">Inactive</span>

                    }

                </td>

                <td class="page-table-data" style="border:solid 1px grey">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#EditModal" id="Edit" onclick="EditFn(@item.ProductID)">Edit</a>


                </td>
                <td class="page-table-data" style="border:solid 1px grey">
                    <a href="#" id="Inactive" onclick="InactiveFn(@item.ProductID)">Inactive</a>
                </td>

            </tr>
        }
    </tbody>
</table>


