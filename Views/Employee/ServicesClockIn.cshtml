            <div class="row" style="height:10px">
            </div>

            <div class="row" style="padding-left:2em ; padding-right:2em">
                Clock In Time :
                <input class="form-control" type="time" list="ClockIn" name="ClockIn" id="ClockIn">

            </div>


            <div class="row" style="padding-left:2em ; padding-right:2em">
                Clock In Date :
                <input class="form-control" type="Date" list="TransactionDate" name="TransactionDate" id="TransactionDate">

            </div>

            <div class="row" style="padding-left:2em ; padding-right:2em">
                Section Name :
                <input class="form-control" list="SectionName" name="SectionName" id="SectionName">
                <datalist id="SectionName">
                    @foreach (var item in Model.tbSection)
                    {
                        <option>@Html.DisplayFor(modelItem => item.SectionName)</option>
                    }
                </datalist>
            </div>

            <div class="row" style="padding-left:2em ; padding-right:2em">
                Services Name :
                <input class="form-control" list="ServicesName" name="ServicesName" id="ServicesName">
                <datalist id="ServicesName">
                    @foreach (var item in Model.tbService)
                    {
                        <option>@Html.DisplayFor(modelItem => item.ServicesName)</option>
                    }
                </datalist>
            </div>



            <div class="row" style="padding-left:20em ;height: 50px">
                <div class="col-7"></div>
                <div class="col-3" style="width:100% ;height:90%">
