@*Diaplay data*@
<table id="table_id" class="page-table">
    <thead>
        <tr>
            @*  <th><input type="checkbox" id="checkall" /></th>*@
            <th class="page-table-head">
                Shift ID
            </th>
            <th class="page-table-head">
                Shift Name
            </th>
            <th class="page-table-head">
                Start Time
            </th>
            <th class="page-table-head">
                End Time
            </th>


            <th class="page-table-head">
                Status
            </th>
            <th class="page-table-head">
                Action
            </th>
            <th class="page-table-head">
                Action
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.ShiftID)
                @*   <td><input type="checkbox" class="checkthis" /></td>*@
                <td id="ShiftId" class="page-table-data">
                    @Html.DisplayFor(modelItem => item.ShiftID)
                </td>
                <td id="ShiftName" class="page-table-data">
                    @Html.DisplayFor(modelItem => item.ShiftName)
                </td>

                <td id="StartTime" class="page-table-data">
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td id="Endime" class="page-table-data">
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>

                <td class="page-table-data">

                    @if (item.Status == 1)
                    {
                        <span id="open">Active</span>

                    }
                    @if (item.Status == 0)
                    {
                        <span id="closed">Inactive</span>

                    }

                </td>

                <td class="page-table-data">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#EditModal" id="Edit" onclick="EditFn(@item.ShiftID)">Edit</a>
                </td>
                <td class="page-table-data">
                    <a href="#" id="Inactive" onclick="InactiveFn(@item.ShiftID)">Inactive</a>
                </td>

            </tr>
        }
    </tbody>
</table>


@*Modal Create*@
<div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" controller="Master" action="ShiftCreate">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Shift Create</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Shift ID:</label>
                        @{
                            int value = @Model.Count + 1;


                            <input type="text" class="form-control" id="Shiftid" name="ShiftID" readonly style="background-color:gainsboro" value="@value">
                        }
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Shift Name:</label>
                        <input type="text" class="form-control" id="Shiftname" name="Shiftname">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-TimeS" class="col-form-label">Shift Time Start:</label>
                        <input type="time" class="form-control" id="TimeStart" name="StartTime">
                    </div>

                    <div class="mb-3">
                        <label for="recipient-TimeE" class="col-form-label">Shift time End:</label>
                        <input type="time" class="form-control" id="TimeEnd" name="EndTime">
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" name="Status" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="Submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>



