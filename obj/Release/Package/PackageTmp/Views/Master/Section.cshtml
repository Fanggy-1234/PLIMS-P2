@*Diaplay data*@
<table id="table_id" class="page-table">
    <thead>
        <tr>

            <th class="page-table-head">
                Section ID
            </th>
            <th class="page-table-head">
                Section Name
            </th>
            <th class="page-table-head">
                Delay Status
            </th>
            <th class="page-table-head">
                Status
            </th>
            <th class="page-table-head" colspan="2">
                Action
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.SectionID)

                <td id="SectionId" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.SectionID)
                </td>
                <td id="SectionName" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.SectionName)
                </td>
                <td id="Delaytime" class="page-table-data" style="border:solid 1px grey">
                    @Html.DisplayFor(modelItem => item.Delaytime)
                </td>
                <td class="page-table-data" style="border:solid 1px grey">

                    @if (item.Status == 1)
                    {
                        <span id="open">Active</span>

                    }
                    @if (item.Status == 0)
                    {
                        <span id="closed">Inactive</span>

                    }


                    @* @Html.DisplayFor(modelItem => item.Status)*@
                </td>

                <td class="page-table-data" style="border:solid 1px grey">

                    <a href="#" data-bs-toggle="modal" data-bs-target="#EditModal" id="Edit" onclick="EditFn(@item.SectionID)">Edit</a>
                </td>
                <td class="page-table-data" style="border:solid 1px grey">
                    <a href="#" id="Inactive" onclick="InactiveFn(@item.SectionID)">Inactive</a>
                </td>

            </tr>
        }
    </tbody>
</table>


