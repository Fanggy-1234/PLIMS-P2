@*Modal Create*@
<div class="modal fade" id="CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" controller="Master" action="SectionCreate">
                <div class="modal-header" style="background-color:blue">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Section Create</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Section ID:</label>
                        @{
                            int value = @Model.Count + 1;


                            <input type="text" class="form-control" name="SectionID" id="SectionID" style="background-color:gainsboro" readonly value="@value">
                        }
                    </div>

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Section Name:</label>
                        <input type="text" class="form-control" name="SectionName" id="SectionName">
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="DelayTime" name="DelayTime" checked>
                        <label class="form-check-label" for="flexSwitchCheckCheckedDelay">Delay Time</label>

                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="Status" name="Status" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>







@*Modal Edit*@
<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" controller="Master" action="SectionUpdate">
                <div class="modal-header" style="background-color:blue">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Section Edit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Section ID:</label>
                        @{

                            <input type="text" class="form-control" id="ModalSectionID" name="SectionID" readonly style="background-color:gainsboro" value="">
                        }
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Section Name:</label>
                        <input type="text" class="form-control" id="ModalSectionName" name="SectionName">
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="ModalDelaytime" name="Delaytime">
                        <label class="form-check-label" for="flexSwitchCheckCheckedDelay">Delay Time</label>

                    </div>


                    <div class="form-check form-switch">
                        <input class="form-check-input" rel="active" type="checkbox" id="ModalStatus" name="Status" value="True">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>





