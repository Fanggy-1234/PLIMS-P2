<script type="text/javascript" charset="utf8">


    //trick data
    function eventFired(type) {
        let n = document.querySelector('#table_info');
        //n.innerHTML +=
        //    '<div>' + type + ' event - ' + new Date().getTime() + '</div>';
        //n.scrollTop = n.scrollHeight;
