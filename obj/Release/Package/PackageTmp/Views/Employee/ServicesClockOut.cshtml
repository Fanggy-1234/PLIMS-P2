            <div class="row" style="padding-left:2em ; padding-right:2em">

                <div class="col-3 label">
                    <label>  Section Name : </label>
                </div>
                <div class="col">
                    <input class="form-control" list="BrowsersName" name="SectionName" id="SectionName">

                    <datalist id="BrowsersName">
