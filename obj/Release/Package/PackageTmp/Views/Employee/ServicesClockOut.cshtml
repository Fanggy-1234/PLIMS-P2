                                <td class="Section-table-data">
                                    @Html.DisplayFor(modelItem => item.SectionID)
                                </td>
                                <td class="Section-table-data">
                                    @Html.DisplayFor(modelItem => item.SectionName)
                                </td>
                                <td class="Section-table-data">
                                    <a href="#" id="btnEdit" data-id="@item.SectionID" onclick="EditFn(@item.SectionID)">Edit</a>

                                </td>

